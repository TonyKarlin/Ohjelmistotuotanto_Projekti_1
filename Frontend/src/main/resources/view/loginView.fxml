<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="700.0" prefWidth="700.0" styleClass="parent" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
   <children>
          <VBox alignment="CENTER" maxHeight="400.0" maxWidth="400.0" prefHeight="461.0" prefWidth="400.0" styleClass="VBox">
              <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="95.0" prefWidth="177.0" text="Welcome To Piscord" textAlignment="CENTER" textFill="#c3c3c3" wrapText="true">
                  <font>
                      <Font name="Bauhaus 93" size="28.0" />
                  </font>
                  <VBox.margin>
                      <Insets bottom="20.0" />
                  </VBox.margin>
              </Label>
         <Label maxWidth="405.0" prefHeight="21.0" prefWidth="405.0" text="USERNAME" textFill="#c3c3c3">
            <font>
               <Font name="System Bold Italic" size="13.0" />
            </font>
            <VBox.margin>
               <Insets bottom="5.0" left="50.0" right="50.0" />
            </VBox.margin>
         </Label>
              <TextField fx:id="userNameTextField" VBox.vgrow="NEVER">
            <VBox.margin>
               <Insets bottom="10.0" left="50.0" right="50.0" />
            </VBox.margin>
            <font>
               <Font size="13.0" />
            </font>
         </TextField>
         <Label layoutX="165.0" layoutY="190.0" maxWidth="405.0" prefHeight="25.0" prefWidth="405.0" text="PASSWORD" textFill="#c3c3c3">
            <font>
               <Font name="System Bold Italic" size="13.0" />
            </font>
            <VBox.margin>
               <Insets bottom="5.0" left="50.0" right="50.0" />
            </VBox.margin>
         </Label>
         <PasswordField fx:id="passwordTextField" styleClass="PasswordField">
            <VBox.margin>
               <Insets left="50.0" right="50.0" />
            </VBox.margin>
            <font>
               <Font size="13.0" />
            </font>
         </PasswordField>
              <Label contentDisplay="CENTER" prefHeight="27.0" prefWidth="406.0" styleClass="clickable-label" text="Forgot your password?" textFill="#705eff">
            <font>
               <Font name="System Bold" size="18.0" />
            </font>
            <VBox.margin>
               <Insets left="50.0" right="50.0" top="5.0" />
            </VBox.margin>
         </Label>
              <Button fx:id="loginButton" alignment="CENTER" contentDisplay="CENTER" onAction="#login" prefHeight="33.0" prefWidth="180.0" text="Login" textAlignment="CENTER" textFill="#ebebeb">
            <font>
               <Font name="System Bold" size="15.0" />
            </font>
            <VBox.margin>
               <Insets left="50.0" right="50.0" top="10.0" />
            </VBox.margin>
         </Button>
              <HBox alignment="CENTER" prefHeight="49.0" prefWidth="396.0">
                  <children>
                      <Label prefHeight="25.0" prefWidth="183.0" text="Not a user? Sign up here" textFill="#c3c3c3">
                  <font>
                     <Font size="16.0" />
                  </font>
               </Label>
                      <Label fx:id="signUpLabel" onMouseClicked="#moveToRegisterView" onMousePressed="#moveToRegisterView" styleClass="clickable-label" text="Sign up" textFill="#705eff">
                  <HBox.margin>
                     <Insets />
                  </HBox.margin>
                  <font>
                     <Font name="System Bold" size="15.0" />
                  </font>
               </Label>
                  </children>
              </HBox>

                      </VBox>
   </children>
</StackPane>
