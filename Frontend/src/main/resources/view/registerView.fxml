<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import java.util.*?>

<StackPane prefHeight="700.0" prefWidth="700.0" styleClass="parent" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RegisterController">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <top>
            
            <!-- Language Selector in top-right corner -->
            <fx:include fx:id="languageButton" source="../component/languageButton.fxml" StackPane.alignment="TOP_RIGHT">
               <StackPane.margin>
                  <Insets right="10.0" top="10.0" />
               </StackPane.margin>
            </fx:include>
         </top>
      </BorderPane>
      <VBox alignment="CENTER" maxHeight="400.0" maxWidth="400.0" styleClass="VBox">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="30.0" prefWidth="316.0" text="%create" textFill="#d3d3d3">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" top="20.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER" prefHeight="88.0" prefWidth="508.0" spacing="40.0">
               <children>
                  <StackPane fx:id="profilePictureContainer" maxHeight="80.0" maxWidth="80.0" prefHeight="1.0" prefWidth="0.0" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <Label layoutX="128.0" layoutY="311.0" prefHeight="21.0" prefWidth="395.0" text="%username" textFill="#c3c3c3">
               <font>
                  <Font name="System Bold Italic" size="13.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="2.0" left="50.0" right="50.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="usernameTextField" layoutX="113.0" layoutY="421.0">
               <font>
                  <Font size="13.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="50.0" right="50.0" />
               </VBox.margin>
            </TextField>
            <Label maxWidth="1.7976931348623157E308" text="%email" textFill="#c3c3c3">
               <font>
                  <Font name="System Bold Italic" size="13.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="5.0" left="50.0" right="50.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="emailTextField" layoutX="113.0" layoutY="451.0">
               <font>
                  <Font size="13.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="50.0" right="50.0" />
               </VBox.margin>
            </TextField>
            <Label layoutX="128.0" layoutY="311.0" maxWidth="1.7976931348623157E308" text="%password" textFill="#c3c3c3">
               <font>
                  <Font name="System Bold Italic" size="13.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="5.0" left="50.0" right="50.0" />
               </VBox.margin>
            </Label>
            <PasswordField fx:id="passwordField" styleClass="PasswordField">
               <font>
                  <Font size="13.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="50.0" right="50.0" />
               </VBox.margin>
            </PasswordField>
            <Label layoutX="128.0" layoutY="311.0" maxWidth="1.7976931348623157E308" text="%password_again" textFill="#c3c3c3">
               <font>
                  <Font name="System Bold Italic" size="13.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="5.0" left="50.0" right="50.0" />
               </VBox.margin>
            </Label>
            <PasswordField fx:id="repeatPasswordField" styleClass="PasswordField">
               <font>
                  <Font size="13.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="50.0" right="50.0" />
               </VBox.margin>
            </PasswordField>
            <HBox alignment="CENTER" maxWidth="405.0" prefHeight="40.0" prefWidth="405.0">
               <children>
                  <CheckBox fx:id="termsAndPrivacyCheckBox" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="13.0" prefWidth="3.0" textFill="#d7d7d7">
                     <font>
                        <Font size="10.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </CheckBox>
                  <Label prefHeight="19.0" prefWidth="199.0" text="%terms_of_service" textFill="#c3c3c3">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Label>
                  <Label text="Terms of Service" textFill="#705eff">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="80.0" layoutY="585.0" maxWidth="405.0" prefHeight="24.0" prefWidth="405.0">
               <children>
                  <Label prefHeight="19.0" prefWidth="26.0" text="%and" textFill="#c3c3c3">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Label>
                  <Label text="%privacy_label" textFill="#705eff">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <Button fx:id="registerButton" alignment="CENTER" contentDisplay="CENTER" onAction="#registerUser" prefWidth="180.0" text="%register" textAlignment="CENTER" textFill="#ebebeb">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
               <VBox.margin>
                  <Insets left="50.0" right="50.0" top="10.0" />
               </VBox.margin>
            </Button>
            <HBox alignment="CENTER" prefHeight="47.0" prefWidth="496.0">
               <children>
                  <Label text="%already_user" textFill="#c9c9c9">
                     <font>
                        <Font size="16.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="loginLabel" onMouseClicked="#moveToLoginView" onMousePressed="#moveToLoginView" styleClass="clickable-label" text="%login" textFill="#6365dc">
                     <HBox.margin>
                        <Insets left="5.0" right="10.0" />
                     </HBox.margin>
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" top="5.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
