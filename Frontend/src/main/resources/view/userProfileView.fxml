<VBox alignment="CENTER" maxHeight="852.0" maxWidth="752.0" prefHeight="852.0" prefWidth="752.0" styleClass="userProfile" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UserProfileController">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="30.0" prefWidth="316.0" text="Change User information" textFill="#d3d3d3">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" top="20.0" />
         </VBox.margin>
      </Label>
      <HBox alignment="CENTER" prefHeight="152.0" prefWidth="546.0" spacing="50.0">
         <children>
            <StackPane fx:id="profilePictureContainer" maxHeight="120.0" maxWidth="120.0" prefHeight="120.0" prefWidth="120.0">
               <children>
                  <ImageView fx:id="userProfilePicture" fitHeight="120.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true" styleClass="imageView" />
                  <AnchorPane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Circle fx:id="userCurrentStatus" fill="#3dad2a" layoutX="109.0" layoutY="107.0" radius="14.0" stroke="BLACK" strokeType="INSIDE" />
                     </children>
                  </AnchorPane>
               </children>
            </StackPane>
            <Button fx:id="changeProfilePictureButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#changeProfilePicture" prefHeight="68.0" prefWidth="178.0" text="Change Profile picture" textAlignment="CENTER" textFill="WHITE" wrapText="true">
               <font>
                  <Font size="18.0" />
               </font>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <Label maxWidth="405.0" prefHeight="21.0" prefWidth="405.0" text="CHANGE STATUS" textFill="#c3c3c3">
         <font>
            <Font size="15.0" />
         </font>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Label>
      <HBox alignment="CENTER" maxHeight="80.0" maxWidth="405.0" prefHeight="80.0" prefWidth="405.0" spacing="70.0" styleClass="text-field">
         <children>
            <Circle fx:id="offlineStatus" fill="#bc5143" onMouseClicked="#changeUserStatus" onMousePressed="#changeUserStatus" radius="14.0" stroke="BLACK" strokeType="INSIDE" styleClass="statusCircle" />
            <Circle fx:id="awayStatus" fill="#d7cb50" layoutX="301.0" layoutY="32.0" onMouseClicked="#changeUserStatus" onMousePressed="#changeUserStatus" radius="14.0" stroke="BLACK" strokeType="INSIDE" styleClass="statusCircle" />
            <Circle fx:id="onlineStatus" fill="#3dad2a" layoutX="287.0" layoutY="32.0" onMouseClicked="#changeUserStatus" onMousePressed="#changeUserStatus" radius="14.0" stroke="BLACK" strokeType="INSIDE" styleClass="statusCircle" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <Label layoutX="128.0" layoutY="311.0" maxWidth="405.0" prefHeight="21.0" prefWidth="405.0" text="USERNAME " textFill="#c3c3c3">
         <font>
            <Font size="15.0" />
         </font>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="usernameTextField" layoutX="113.0" layoutY="421.0" maxHeight="405.0" maxWidth="405.0" prefHeight="40.0" prefWidth="600.0">
         <font>
            <Font size="15.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </TextField>
      <Label maxWidth="405.0" prefHeight="21.0" prefWidth="405.0" text="EMAIL" textFill="#c3c3c3">
         <font>
            <Font size="15.0" />
         </font>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
      <TextField fx:id="emailTextField" layoutX="113.0" layoutY="451.0" maxWidth="405.0" prefHeight="40.0" prefWidth="405.0">
         <font>
            <Font size="16.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </TextField>
      <Label layoutX="128.0" layoutY="311.0" prefHeight="21.0" prefWidth="405.0" text="NEW PASSWORD" textFill="#c3c3c3">
         <font>
            <Font size="15.0" />
         </font>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
      <PasswordField fx:id="passwordField" maxWidth="405.0" prefHeight="40.0" prefWidth="405.0" styleClass="PasswordField">
         <font>
            <Font size="16.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </PasswordField>
      <Label layoutX="128.0" layoutY="311.0" maxWidth="405.0" prefHeight="21.0" prefWidth="405.0" text="WRITE PASSWORD AGAIN" textFill="#c3c3c3">
         <font>
            <Font size="15.0" />
         </font>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
      <PasswordField fx:id="repeatPasswordField" maxWidth="405.0" prefHeight="40.0" prefWidth="405.0" styleClass="PasswordField">
         <font>
            <Font size="16.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </PasswordField>
      <Button fx:id="changeInformationButton" maxHeight="50.0" maxWidth="405.0" onAction="#changeInformation" prefHeight="50.0" prefWidth="405.0" text="Change" textAlignment="CENTER" textFill="#ebebeb">
         <font>
            <Font size="18.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
