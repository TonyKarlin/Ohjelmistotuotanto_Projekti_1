<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER" fillHeight="false" prefHeight="70.0" prefWidth="212.0" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.component.ConversationHBoxController">
   <children>
      <StackPane fx:id="contactContent" prefHeight="62.0" prefWidth="60.0">
         <children>
            <AnchorPane prefHeight="68.0" prefWidth="60.0">
               <children>
                  <ImageView fx:id="contactUserPicture" fitHeight="60.0" fitWidth="60.0" layoutY="23.0" onMouseClicked="#openMessages" pickOnBounds="true" preserveRatio="true" styleClass="ImageView">
                     <image>
                        <Image url="@../img/img_2.png" />
                     </image>
                  </ImageView>
                  <Circle fx:id="contactUserStatus" fill="#40c351" layoutX="50.0" layoutY="75.0" radius="7.0" stroke="BLACK" strokeType="INSIDE" />
               </children>
            </AnchorPane>
         </children>
      </StackPane>
      <Label fx:id="contactUsername" alignment="TOP_LEFT" contentDisplay="CENTER" prefHeight="55.0" prefWidth="131.0" text="Username" textFill="#c3c3c3">
         <font>
            <Font name="System Bold" size="17.0" />
         </font>
         <padding>
            <Insets top="5.0" />
         </padding>
         <HBox.margin>
            <Insets left="10.0" />
         </HBox.margin>
      </Label>
   </children>
</HBox>
