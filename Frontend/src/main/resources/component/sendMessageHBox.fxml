<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>


<HBox alignment="CENTER" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.component.SendMessageHBoxController">
   <children>
      <Button fx:id="messageOptionsButton" mnemonicParsing="false" text="+" textFill="WHITE">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </Button>
      <TextField fx:id="sendMessageTextField" promptText="Send Message" HBox.hgrow="ALWAYS">
         <font>
            <Font size="16.0" />
         </font>
      </TextField>
      <Button fx:id="sendMessageButton" mnemonicParsing="false" onAction="#sendMessageToConversation" text="Send" textAlignment="CENTER" textFill="WHITE">
         <HBox.margin>
            <Insets />
         </HBox.margin>
         <font>
            <Font size="16.0" />
         </font>
      </Button>
   </children>
   <padding>
      <Insets bottom="20.0" left="50.0" right="50.0" top="20.0" />
   </padding>
</HBox>
