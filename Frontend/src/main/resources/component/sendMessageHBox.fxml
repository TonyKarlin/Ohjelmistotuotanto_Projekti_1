<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>


<HBox alignment="CENTER" prefHeight="76.0" prefWidth="988.0" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SendMessageHBoxController">
   <children>
      <Button fx:id="messageOptionsButton" mnemonicParsing="false" prefHeight="37.0" prefWidth="39.0" text="+" textFill="WHITE">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
         <HBox.margin>
            <Insets left="100.0" />
         </HBox.margin>
      </Button>
      <TextField fx:id="sendMessageTextField" prefHeight="38.0" prefWidth="532.0" promptText="Send Message" HBox.hgrow="ALWAYS" />
      <Button fx:id="sendMessageButton" mnemonicParsing="false" prefHeight="36.0" prefWidth="50.0" text="Send" textFill="WHITE">
         <HBox.margin>
            <Insets right="100.0" />
         </HBox.margin>
      </Button>
   </children>
</HBox>
