<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER_LEFT" prefHeight="58.0" prefWidth="725.0" styleClass="messageHBox" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.component.MessageHBoxController">
   <children>
      <ImageView fx:id="userProfilePicture1" fitHeight="42.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/img_2.png" />
         </image>
         <HBox.margin>
            <Insets left="10.0" />
         </HBox.margin>
      </ImageView>
      <VBox alignment="CENTER_LEFT" prefHeight="55.0" prefWidth="465.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label fx:id="senderUsernameLabel" prefHeight="30.0" prefWidth="112.0" text="Username" textFill="WHITE">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="messageTimeLabel" contentDisplay="CENTER" prefHeight="40.0" prefWidth="174.0" text="12:38" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </HBox>
            <Label fx:id="messageLabel" prefHeight="28.0" prefWidth="396.0" text="No moro Pekka! Miten meneeee?!" textFill="WHITE">
               <font>
                  <Font size="16.0" />
               </font>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </Label>
         </children>
      </VBox>
      <Region prefHeight="55.0" prefWidth="98.0" HBox.hgrow="ALWAYS" />
      <MenuButton fx:id="messageOptionButton" mnemonicParsing="false" popupSide="LEFT" prefHeight="0.0" prefWidth="13.0">
        <items>
          <MenuItem fx:id="deleteMenuitem" mnemonicParsing="false" onAction="#deleteMessage" text="Delete" />
          <MenuItem fx:id="modifyMenuItem" mnemonicParsing="false" onAction="#modifyMessage" text="Modify" />
        </items>
         <HBox.margin>
            <Insets right="20.0" />
         </HBox.margin>
         <graphic>
            <ImageView fitHeight="27.0" fitWidth="26.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/menu.png" />
               </image>
            </ImageView>
         </graphic>
      </MenuButton>
   </children>
</HBox>
